{
    "query": {
      "bool": {
        "must": [
          {
            "term": {
              "host.name": "c1"
            }
          },
          {
            "term": {
              "event.module": "system"
            }
          },
          {
            "term": {
              "event.dataset": "system.cpu"
            }
          }
        ]
      }
    },
    "sort": [
      {
        "@timestamp": {
          "order": "desc"
        }
      }
    ],
    "size": 1
  }